{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true, // Allows JavaScript files
        "checkJs": false, // Ignores JS type-checking errors
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "typeRoots": ["./node_modules/@types", "./node_modules/@discordjs/typings"]
}
